import java.util.Scanner;

public class salario_mais_impostos {
    
    public static void main(String[] args) {
    Scanner escaner = new Scanner(System.in);
    System.out.println("Qual seu salário? ");
    double salaro = escaner.nextDouble();
    double gratificacao = salaro * 0.05;
    double imposto = salaro * 0.07;
    double salaro_deduzido = salaro + gratificacao - imposto;
    System.out.println("Seu salário, junto com gratificações e impostos, será de R$" + salaro_deduzido);
    }
}
